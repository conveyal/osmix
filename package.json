{
	"$schema": "https://json.schemastore.org/package",
	"name": "osmix",
	"packageManager": "bun@1.3.1",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dequal": "^2.0.3",
			"@mapbox/geojson-rewind": "^0.5.0",
			"@mapbox/sphericalmercator": "^2.0.2",
			"maplibre-gl": "^5.9.0",
			"pbf": "^4.0.1",
			"typescript": "^5.9.0",
			"@types/geojson": "^7946.0.16",
			"@types/node": "^24",
			"@types/bun": "^1.3.1",
			"vite": "^7.1.7",
			"vitest": "^4.0.1"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@changesets/cli": "^2.29.7",
		"typescript": "catalog:"
	},
	"scripts": {
		"dev": "bun --filter '*' dev",
		"build": "bun --filter '*' build",
		"check": "biome check --write .",
		"clean": "rm -rf packages/*/dist apps/*/dist node_modules packages/*/node_modules apps/*/node_modules",
		"format": "biome format --write .",
		"lint": "biome lint --write --unsafe .",
		"publish": "changeset publish",
		"test": "bun run test:packages && bun run test:apps && bun run typecheck && bun run lint && bun run check",
		"test:apps": "bun --filter './apps/**' test --silent",
		"test:packages": "bun --bun --filter './packages/**' test --silent",
		"typecheck": "bun --filter '*' typecheck",
		"version": "changeset version"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide"
	]
}
