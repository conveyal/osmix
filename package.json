{
	"$schema": "https://json.schemastore.org/package.json",
	"packageManager": "bun@1.3.9",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"@placemarkio/geojson-rewind": "^1.0.3",
			"@types/bun": "^1.3.9",
			"@types/geojson": "^7946.0.16",
			"dequal": "^2.0.3",
			"maplibre-gl": "^5.9.0",
			"pbf": "^4.0.1",
			"typescript": "^5.9.0",
			"vite": "^7.2.7"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@changesets/cli": "^2.29.8",
		"@typescript/native-preview": "latest",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"dev": "bun --filter '*' dev",
		"build": "bun --filter '*' build",
		"check": "biome check --write .",
		"clean": "rm -rf packages/*/dist apps/*/dist node_modules packages/*/node_modules apps/*/node_modules packages/*/*.tgz",
		"format": "biome format --write .",
		"lint": "biome lint --write --unsafe .",
		"test": "bun run test:packages",
		"test:all": "bun run typecheck && bun run lint && bun run check && bun run test:packages && bun run test:apps",
		"test:apps": "bun --filter './apps/**' test --silent",
		"test:packages": "bun --filter './packages/**' test --silent",
		"typecheck": "bun --filter '*' typecheck",
		"version": "changeset version && bun update",
		"release": "bun scripts/release.ts"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide"
	]
}
